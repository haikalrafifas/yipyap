{
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 2], // Enforce 2 spaces for indentation
      "quotes": ["error", "single"], // Enforce single quotes
      "semi": ["error", "always"] // Require semicolons
    }
  }
  